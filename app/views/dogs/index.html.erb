<header>
  <h2>Dog Search</h2>
</header>
<section class="search-form">
  <%=form_for :dogs, method: :get do |f|%>
  <div class="input-group input-group-lg">
    <%= label_tag :keywords, nil, class: "sr-only"%>
    <%= text_field_tag :keywords, nil, placeholder: "Name, Gender, Age, or Breed", class: "form-control input-lg"%>
    <span class="input-group-btn">
      <%=submit_tag "Find Dogs", class: "btn btn-primary btn-lg"%>
    </span>
  </div>
  <% end %>
</section>
<section class="search-results">
  <header>
    <h3>Results</h3>
  </header>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Gender</th>
        <th>Age</th>
        <th>Breed</th>
      </tr>
    </thead>
    <tbody>
      <% @dogs.each do |dog|%>
      <tr>
        <td><%= dog.name %></td>
        <td><%= dog.gender %></td>
        <td><%= dog.age %></td>
        <td><%= dog.breed %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</section>
